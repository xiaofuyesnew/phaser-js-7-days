{
  "name": "Phaser.js 游戏优化示例",
  "short_name": "Phaser Game",
  "description": "展示游戏性能优化、响应式设计和部署最佳实践的完整示例",
  "version": "1.0.0",
  "start_url": "/",
  "display": "fullscreen",
  "orientation": "landscape-primary",
  "theme_color": "#2c3e50",
  "background_color": "#1a1a1a",
  "lang": "zh-CN",
  "scope": "/",
  
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/game-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "游戏桌面版截图"
    },
    {
      "src": "/screenshots/game-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "游戏移动版截图"
    }
  ],
  
  "categories": [
    "games",
    "entertainment",
    "education"
  ],
  
  "shortcuts": [
    {
      "name": "开始游戏",
      "short_name": "开始",
      "description": "直接开始游戏",
      "url": "/?action=start",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "设置",
      "short_name": "设置",
      "description": "游戏设置",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+phasergame",
      "url": "/?handler=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "audio/*"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred"
}