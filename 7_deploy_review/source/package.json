{
  "name": "phaser-game-optimized",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:optimize": "npm run build && node scripts/build-optimize.js",
    "preview": "vite preview",
    "deploy:github": "npm run build:optimize && node scripts/deploy.js github",
    "deploy:vercel": "npm run build:optimize && node scripts/deploy.js vercel",
    "deploy:netlify": "npm run build:optimize && node scripts/deploy.js netlify",
    "analyze": "npm run build -- --mode analyze",
    "test:performance": "node scripts/performance-test.js",
    "test:complete": "node scripts/test-complete-game.js",
    "test:all": "npm run test:complete && npm run test:performance",
    "optimize": "node scripts/build-optimize.js",
    "clean": "rimraf dist",
    "lint": "echo 'Linting not configured'",
    "type-check": "echo 'Type checking not configured'"
  },
  "devDependencies": {
    "vite": "^7.1.0",
    "terser": "^5.19.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rimraf": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  }
}
